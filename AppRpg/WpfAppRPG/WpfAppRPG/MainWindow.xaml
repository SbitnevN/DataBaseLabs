<Window x:Class="WpfAppRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppRPG"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Button x:Name="logButton" Content="login" HorizontalAlignment="Left" Margin="212,91,0,0" VerticalAlignment="Top" Width="60" Click="LoginButtonClick"/>
        <Button x:Name="addButton" Content="register" HorizontalAlignment="Left" Margin="212,136,0,0" VerticalAlignment="Top" Width="60" Click="AddButtonClick"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Margin="73,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Margin="73,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
